
{% extends 'base.html.twig' %}

{% block body %}
<style>
body{
    background: darkblue;
    background-size:cover;

}

.imgH1 {
    position: relative;
    overflow: hidden;
    /* padding: 16px; */
    /* border: 1px dashed green; */
}
.imgH1 h1 {
    /* padding: 100px; */
    position: relative;
    z-index: 2;
}
.imgH1 .imgh1 {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: auto;
    opacity: 0.6;
}
section{
    position: relative;
    z-index: 2;
}
footer{
    position: relative;
    z-index: 2;
}

.listProd{
    background-color: #FF9000;
}
</style>
    <!--Main layout-->

<div class="imgH1 col-md-12">
    <img class="imgh1 bgH d-block w-100" src="{{asset('/assets/uploads/products/6fcf56946d753a0a73da5ed0842ea4e3.webp')}}" >
    <main class="container">
        <section class="row">
            <div class="card mb-4 wow fadeIn">
                <div class="card-body d-sm-flex justify-content-between">
                    <h4 class="mb-2 mb-sm-0 pt-1">
                        <span> Historique des commandes  -  Total des commandes : <b>{{ sumOrder|number_format(2, ',', '.') }} €</b></span>
                    </h4>
                </div>
            </div>
    </section>
    </main>
</div>

                <div class="row text-center wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
                    <div class="col-md-10 mb-4">
                        <div class="card col-md">
                            <div class="card-body col-md">
                                <table class="table table-striped table-hover col-md-12">
                                    <thead>
                                        <tr class"col-md">
                                            <th scope="col-md-3" colspan="2">{{ 'order.reference'|trans }}</th>
                                            <th scope="col-md-3">{{ 'order.name'|trans }}</th>
                                            <th scope="col-md-3">{{ 'order.price'|trans }}</th>
                                            <th scope="col-md-3">{{ 'order.brandStripe'|trans }}</th>
                                            <th scope="col-md-3">{{ 'order.last4Stripe'|trans }}</th>
                                            <th scope="col-md-3">{{ 'order.statusStripe'|trans }}</th>
                                            <th scope="col-md-3">{{ 'order.createdAt'|trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for order in orders %}
                                        <tr>
                                            {# <td> <img src="{{ order.products.image }}" alt="..." class="img-thumbnail" style="width: 150px;">  </td> #}
                                            <td scope="col-md-3">{{ order.reference }}</td>
                                            <td scope="col-md-3">{{ order.products.name }}</td>
                                            <td scope="col-md-3">{{ order.price|number_format(2, ',', '.') }} €</td>
                                            <td scope="col-md-3">{{ order.brandStripe }}</td>
                                            <td scope="col-md-3">{{ order.last4Stripe }}</td>
                                            <td scope="col-md-3"><span class="badge badge-success">{{ order.statusStripe }}</span></td>
                                            <td scope="col-md-3">{{ order.createdAt|date('l d/m/Y h:i:s') }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}